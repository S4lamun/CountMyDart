<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CountMyDartMaui.MainPage"
             Title=""
             BackgroundColor="#1E1E1E">

    <Grid RowDefinitions="Auto, Auto, Auto, Auto, *"
          ColumnDefinitions="*, *, *"
          Padding="10">

        
        <Border Grid.Column="0" Grid.ColumnSpan="3"
                Grid.Row="0"
                BackgroundColor="#333333"
                Stroke="#FFD700"
                StrokeThickness="2"
                StrokeShape="RoundRectangle 10"
                Padding="10"
                HorizontalOptions="Fill"
                VerticalOptions="Start"
                Margin="0,10,0,20">

            <Label Text="Count My Dart!"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"
                   FontSize="{OnPlatform Android=24, Default=28}"
                   FontAttributes="Bold"
                   TextColor="#FFD700"/>
        </Border>

       
        <Image Source="dartboard.png"
               Grid.Column="1"
               Grid.Row="1"
               WidthRequest="{OnPlatform Android=200, Default=250}"
               HeightRequest="{OnPlatform Android=200, Default=250}"
               HorizontalOptions="Center"
               Margin="0,0,0,10"/>

        
        <VerticalStackLayout Grid.Row="2" Grid.ColumnSpan="2"
                             VerticalOptions="Center"
                             Spacing="10"
                             Margin="0,30,0,0">

            <Label Text="Choose how many people will play:"
                   FontSize="16"
                   HorizontalOptions="Center"
                   TextColor="#FFFFFF"
                   HorizontalTextAlignment="Center"/>

            <Border BackgroundColor="#333333"
                    Stroke="#4CAF50"
                    StrokeThickness="1"
                    StrokeShape="RoundRectangle 10"
                    Padding="10"
                    HorizontalOptions="Center"
                    WidthRequest="250">

                <HorizontalStackLayout Spacing="10">
                    <Image Source="personicon.png"
                           HeightRequest="40"
                           WidthRequest="30"/>
                    <Picker x:Name="PlayerPicker"
                            ItemsSource="{Binding PlayersAmount}"
                            WidthRequest="200"
                            HeightRequest="40"
                            HorizontalTextAlignment="Center"
                            SelectedIndexChanged="PlayerAmountChanged"
                            BackgroundColor="Transparent"
                            TextColor="#FFFFFF"/>
                </HorizontalStackLayout>
            </Border>
        </VerticalStackLayout>

        <VerticalStackLayout Grid.Row="3" Grid.ColumnSpan="2"
                             VerticalOptions="Center"
                             Spacing="10"
                             Margin="0,30,0,0">

            <Label Text="Choose game mode:"
                   FontSize="16"
                   HorizontalOptions="Center"   
                   TextColor="#FFFFFF"
                   HorizontalTextAlignment="Center"/>

            <Border BackgroundColor="#333333"
                    Stroke="#4CAF50"
                    StrokeThickness="1"
                    StrokeShape="RoundRectangle 10"
                    Padding="10"
                    HorizontalOptions="Center">

                <HorizontalStackLayout Spacing="10">
                    <Image Source="controller.png"
                           WidthRequest="40"/>
                    <Picker x:Name="GamePicker"
                            ItemsSource="{Binding TypeOfGame}"
                            WidthRequest="200"
                            HeightRequest="40"
                            HorizontalTextAlignment="Center"
                            SelectedIndexChanged="GameTypeChanged"
                            BackgroundColor="Transparent"
                            TextColor="#FFFFFF"/>
                </HorizontalStackLayout>
            </Border>
        </VerticalStackLayout>

        <HorizontalStackLayout Grid.ColumnSpan="2" Grid.Row="4" Spacing="70">
            <Button Text="Settings"
                x:Name="SettingsButton"
                Grid.Column="1"
                WidthRequest="150"
                HeightRequest="50"
                VerticalOptions="End"
                HorizontalOptions="Center"
                Clicked="SettingsButtonClicked"
                BackgroundColor="#4CAF50"
                TextColor="#FFFFFF"
                CornerRadius="25"/>
            <Button Text="Accept"
             x:Name="AcceptButton"
             Grid.Column="1"
            WidthRequest="150"
            HeightRequest="50"
            VerticalOptions="End"
            HorizontalOptions="Center"
            Clicked="AcceptButtonClicked"
            BackgroundColor="#4CAF50"
            TextColor="#FFFFFF"
            CornerRadius="25"/>
        </HorizontalStackLayout>
    </Grid>
</ContentPage>