<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CountMyDartMaui.SettingsPage"
             Title="SettingsPage">
    <VerticalStackLayout Padding="20">
        <Label Text="Language:" FontSize="18" />
        <Picker x:Name="LanguagePicker"
                ItemsSource="{Binding languages}"
                SelectedItem="{Binding selectedLanguage}"
                SelectedIndexChanged="LanguageSelectedChange"/>

        <Label Text="Input Modes:" FontSize="18" Margin="0,20,0,0" />
        <Picker x:Name="InputModePicker"
                ItemsSource="{Binding inputModes}"
                SelectedItem="{Binding selectedInputMode}"
                SelectedIndexChanged="InputSelectedChange"/>

        <Button Text="Save changes and go back"
                Clicked="ButtonClicked"
                WidthRequest="200"
                HeightRequest="50"/>
    </VerticalStackLayout>
</ContentPage>