<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:CountMyDartMaui.Resources.Localization"
             x:Class="CountMyDartMaui.MainPage"
             Title=""
             BackgroundColor="#121212">

    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#121212" Offset="0.0" />
            <GradientStop Color="#1E1E1E" Offset="1.0" />
        </LinearGradientBrush>
    </ContentPage.Background>

    <Grid RowDefinitions="Auto, Auto, Auto, Auto, *"
          ColumnDefinitions="*, *, *"
          Padding="15">

      
        <Border Grid.Column="0" Grid.ColumnSpan="3"
                Grid.Row="0"
                Stroke="#CC0000"
                StrokeThickness="2"
                StrokeShape="RoundRectangle 15"
                Padding="15"
                HorizontalOptions="Fill"
                VerticalOptions="Start"
                Margin="0,10,0,25">

            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#222222" Offset="0.0" />
                    <GradientStop Color="#333333" Offset="1.0" />
                </LinearGradientBrush>
            </Border.Background>

            <Border.Shadow>
                <Shadow Brush="#CC0000"
                        Offset="0,3"
                        Radius="5"
                        Opacity="0.5" />
            </Border.Shadow>

            <Label Text="Count My Dart!"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"
                   FontSize="{OnPlatform Android=28, Default=32}"
                   FontAttributes="Bold"
                   TextColor="#CC0000">
                <Label.Shadow>
                    <Shadow Brush="#000000"
                            Offset="1,1"
                            Radius="1"
                            Opacity="0.7" />
                </Label.Shadow>
            </Label>
        </Border>

       
        <Frame Grid.Column="1"
               Grid.Row="1"
               BackgroundColor="Transparent"
               BorderColor="Transparent"
               CornerRadius="125"
               Padding="0"
               HorizontalOptions="Center"
               VerticalOptions="Center"
               HasShadow="True"
               Margin="0,0,0,15">

            <Image Source="dartboard.png"
                   WidthRequest="{OnPlatform Android=200, Default=250}"
                   HeightRequest="{OnPlatform Android=200, Default=250}"
                   Aspect="AspectFit">
                <Image.Shadow>
                    <Shadow Brush="#4CAF50"
                            Offset="0,4"
                            Radius="10"
                            Opacity="0.6" />
                </Image.Shadow>
            </Image>
        </Frame>

        
        <VerticalStackLayout Grid.Row="2" Grid.ColumnSpan="3"
                             VerticalOptions="Center"
                             Spacing="12"
                             Margin="0,30,0,0">

            <Label Text="{x:Static local:AppResources.MainPagePlayersAmount}"
                   FontSize="18"
                   HorizontalOptions="Center"
                   TextColor="#FFFFFF"
                   FontAttributes="Bold"
                   HorizontalTextAlignment="Center">
                <Label.Shadow>
                    <Shadow Brush="#000000"
                            Offset="1,1"
                            Radius="1"
                            Opacity="0.5" />
                </Label.Shadow>
            </Label>

            <Border BackgroundColor="#252525"
                    Stroke="#4CAF50"
                    StrokeThickness="1.5"
                    StrokeShape="RoundRectangle 12"
                    Padding="15"
                    HorizontalOptions="Center"
                    WidthRequest="280">

                <Border.Shadow>
                    <Shadow Brush="#4CAF50"
                            Offset="0,2"
                            Radius="4"
                            Opacity="0.3" />
                </Border.Shadow>

                <HorizontalStackLayout Spacing="15">
                    <Image Source="personicon.png"
                           HeightRequest="40"
                           WidthRequest="30">
                        <Image.Shadow>
                            <Shadow Brush="#FFFFFF"
                                    Offset="0,0"
                                    Radius="5"
                                    Opacity="0.3" />
                        </Image.Shadow>
                    </Image>
                    <Picker x:Name="PlayerPicker"
                            ItemsSource="{Binding PlayersAmount}"
                            WidthRequest="200"
                            HeightRequest="40"
                            HorizontalTextAlignment="Center"
                            SelectedIndexChanged="PlayerAmountChanged"
                            BackgroundColor="Transparent"
                            TextColor="#FFFFFF"
                            FontSize="16"/>
                </HorizontalStackLayout>
            </Border>
        </VerticalStackLayout>

        
        <VerticalStackLayout Grid.Row="3" Grid.ColumnSpan="3"
                             VerticalOptions="Center"
                             Spacing="12"
                             Margin="0,30,0,0">

            <Label Text="{x:Static local:AppResources.MainPageGameModeChoose}"
                   FontSize="18"
                   HorizontalOptions="Center"   
                   TextColor="#FFFFFF"
                   FontAttributes="Bold"
                   HorizontalTextAlignment="Center">
                <Label.Shadow>
                    <Shadow Brush="#000000"
                            Offset="1,1"
                            Radius="1"
                            Opacity="0.5" />
                </Label.Shadow>
            </Label>

            <Border BackgroundColor="#252525"
                    Stroke="#CC0000"
                    StrokeThickness="1.5"
                    StrokeShape="RoundRectangle 12"
                    Padding="15"
                    HorizontalOptions="Center"
                    WidthRequest="280">

                <Border.Shadow>
                    <Shadow Brush="#CC0000"
                            Offset="0,2"
                            Radius="4"
                            Opacity="0.3" />
                </Border.Shadow>

                <HorizontalStackLayout Spacing="15">
                    <Image Source="controller.png"
                           WidthRequest="40">
                        <Image.Shadow>
                            <Shadow Brush="#FFFFFF"
                                    Offset="0,0"
                                    Radius="5"
                                    Opacity="0.3" />
                        </Image.Shadow>
                    </Image>
                    <Picker x:Name="GamePicker"
                            ItemsSource="{Binding TypeOfGame}"
                            WidthRequest="200"
                            HeightRequest="40"
                            HorizontalTextAlignment="Center"
                            SelectedIndexChanged="GameTypeChanged"
                            BackgroundColor="Transparent"
                            TextColor="#FFFFFF"
                            FontSize="16"/>
                </HorizontalStackLayout>
            </Border>
        </VerticalStackLayout>

       
        <Grid Grid.ColumnSpan="3" Grid.Row="4" ColumnDefinitions="*, *" RowDefinitions="*">
            <Button Text="{x:Static local:AppResources.MainPageButton2}"
                x:Name="SettingsButton"
                Grid.Column="0"
                WidthRequest="160"
                HeightRequest="55"
                VerticalOptions="End"
                HorizontalOptions="End"
                Margin="0,0,10,0"
                Clicked="SettingsButtonClicked"
                TextColor="#FFFFFF"
                FontAttributes="Bold"
                FontSize="16"
                CornerRadius="28">
                <Button.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#CC0000" Offset="0.0" />
                        <GradientStop Color="#AA0000" Offset="1.0" />
                    </LinearGradientBrush>
                </Button.Background>
                <Button.Shadow>
                    <Shadow Brush="#CC0000"
                            Offset="0,3"
                            Radius="6"
                            Opacity="0.5" />
                </Button.Shadow>
            </Button>

            <Button Text="{x:Static local:AppResources.MainPageButton}"
                x:Name="AcceptButton"
                Grid.Column="1"
                WidthRequest="160"
                HeightRequest="55"
                VerticalOptions="End"
                HorizontalOptions="Start"
                Margin="10,0,0,0"
                Clicked="AcceptButtonClicked"
                TextColor="#FFFFFF"
                FontAttributes="Bold"
                FontSize="16"
                CornerRadius="28">
                <Button.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#4CAF50" Offset="0.0" />
                        <GradientStop Color="#388E3C" Offset="1.0" />
                    </LinearGradientBrush>
                </Button.Background>
                <Button.Shadow>
                    <Shadow Brush="#4CAF50"
                            Offset="0,3"
                            Radius="6"
                            Opacity="0.5" />
                </Button.Shadow>
            </Button>
        </Grid>
    </Grid>
</ContentPage>