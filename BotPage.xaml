<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:CountMyDartMaui.Resources.Localization"
             x:Class="CountMyDartMaui.BotPage"
             Title=""
             BackgroundColor="#1E1E1E">

    <VerticalStackLayout Spacing="20" Padding="20">

        <Label Text="{Binding RoundText}" 
               FontSize="24" 
               HorizontalOptions="Center" 
               TextColor="#FFD700" 
               FontAttributes="Bold"
               Margin="0,0,0,20"/>

        <Border BackgroundColor="#8B0000" 
                Padding="15" 
                StrokeShape="RoundRectangle 10">
            <VerticalStackLayout Spacing="15">
                <Label Text="{x:Static local:AppResources.BotPageYourPointsToGain}" 
                       FontSize="18" 
                       FontAttributes="Bold" 
                       TextColor="#FFFFFF"/>
                <Border BackgroundColor="#333333" 
                Padding="10" 
                StrokeShape="RoundRectangle 10">
                    <Label Text="{Binding Player.TargetPoints}" 
                       FontSize="24"
                       FontAttributes="Bold"
                       TextColor="#FFFFFF"
                       HorizontalOptions="Center"/>
                </Border>
                <Label Text="{x:Static local:AppResources.BotPageYourThrows}" 
                       FontSize="18" 
                       FontAttributes="Bold" 
                       TextColor="#FFFFFF"/>
                <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
                    <Entry Text="{Binding Player.Throw1, Mode=TwoWay}" 
                           Keyboard="Numeric" 
                           Placeholder="0" 
                           Focused="ThrowFocused" 
                           WidthRequest="80"
                           TextColor="#FFFFFF"
                           BackgroundColor="#333333"
                           HorizontalTextAlignment="Center"/>
                    <Entry Text="{Binding Player.Throw2, Mode=TwoWay}" 
                           Keyboard="Numeric" 
                           Placeholder="0" 
                           Focused="ThrowFocused" 
                           WidthRequest="80"
                           TextColor="#FFFFFF"
                           BackgroundColor="#333333"
                           HorizontalTextAlignment="Center"/>
                    <Entry Text="{Binding Player.Throw3, Mode=TwoWay}" 
                           Keyboard="Numeric" 
                           Placeholder="0" 
                           Focused="ThrowFocused" 
                           WidthRequest="80"
                           TextColor="#FFFFFF"
                           BackgroundColor="#333333"
                           HorizontalTextAlignment="Center"/>
                </HorizontalStackLayout>
            </VerticalStackLayout>
        </Border>


        <BoxView HeightRequest="20" Color="#1E1E1E"/>


        <Border BackgroundColor="#8B0000" 
                Padding="15" 
                StrokeShape="RoundRectangle 10">
            <VerticalStackLayout Spacing="15">
                <Label Text="{x:Static local:AppResources.BotPageBotPointsToGain}" 
                       FontSize="18" 
                       FontAttributes="Bold" 
                       TextColor="#FFFFFF"
                       HorizontalOptions="Center"/>
                <Border BackgroundColor="#333333" 
                        Padding="10" 
                        StrokeShape="RoundRectangle 10">
                    <Label Text="{Binding Bot.TargetPoints}" 
                           FontSize="24" 
                           FontAttributes="Bold" 
                           TextColor="#FFFFFF"
                           HorizontalOptions="Center"/>
                </Border>
            </VerticalStackLayout>
        </Border>


        <HorizontalStackLayout Spacing="70">
            <Button Text="{x:Static local:AppResources.BotPageButton1}" 
            Clicked="AcceptThrowsButtonClicked" 
            HorizontalOptions="Start" 
            BackgroundColor="#4CAF50" 
            TextColor="#FFFFFF" 
            CornerRadius="25" 
            HeightRequest="50"
            WidthRequest="150"/>

            <Button Text="{x:Static local:AppResources.BotPageButton2}"
            Clicked="EndGameButtonClicked"
            HorizontalOptions="End"
            BackgroundColor="#4CAF50" 
            CornerRadius="25" 
            HeightRequest="50"
            TextColor="#FFFFFF" 
            WidthRequest="150"/>
        </HorizontalStackLayout>

    </VerticalStackLayout>
</ContentPage>